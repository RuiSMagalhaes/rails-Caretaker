<p id="notice"><%= notice %></p>

<h1>Events</h1>

<%= month_calendar events: @events do |date, events| %>
  <%= date %>
  <% events.each do |event| %>
    <div>
      <p><%= event.name %></p>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_time %></td>
        <td><%= link_to 'Show', profile_event_path(id: event.id) %></td>
        <td><%= link_to 'Edit', edit_profile_event_path(id: event.id) %></td>
        <td><%= link_to 'Destroy', profile_event_path(id: event.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_profile_event_path %>
