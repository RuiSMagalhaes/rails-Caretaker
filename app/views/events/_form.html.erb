<%= f.error_notification %>
<%= f.error_notification message: @event.errors.full_messages.to_sentence %>

<%= @event.errors.full_messages.join(', ') %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.association :event_type %>
  <%= f.input :start_time %>
  <%= f.input :recurring?, as: :boolean,
              hint:"  If this event occur multiple times." %>
  <%= f.input :minutes,
              hint:"  Time space between events in minutes." %>
  <%= f.input :hours,
              hint:"  Time space between events in hours." %>
  <%= f.input :days,
              hint:"  Time space between events in days." %>
  <%= f.input :weeks,
              hint:"  Time space between events in weeks." %>
  <%= f.input :months,
              hint:"  Time space between events in months." %>
  <%= f.input :end_time %>
  <%= f.input :notify_before?, as: :boolean,
              hint:"  If you want to be notified 15mins before the event." %>
  <%= f.input :notify_done?, as: :boolean,
              hint:"  If you want the caretaker to be notified when event is marked as done." %>
  <%= f.input :done?, as: :boolean,
              hint:"  If you want the caretaker to be notified when event is marked as done." %>
  <%= f.input :notify_missed?, as: :boolean,
              hint:"  If you want the caretaker to be notified if the event is not done 15mins after the scheduled time." %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
