<p id="notice"><%= notice %></p>

<h1>Events</h1>

<div class="calendar-day">
  <%= calendar number_of_days: 1, events: @events do |date, events| %>
    <% events.each do |event| %>
      <div>
        <p><%= event.start_time.strftime("%H:%M") %> | <%= link_to event.name, profile_event_path(event.user, event) %></p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="calendar-week">
  <%= week_calendar number_of_weeks: 1, events: @events do |date, events| %>
    <% events.each do |event| %>
      <div>
        <p><%= event.start_time.strftime("%H:%M") %> | <%= link_to event.name, profile_event_path(event.user, event) %></p>
      </div>
    <% end %>
  <% end %>
</div>

<%= month_calendar events: @events do |date, events| %>
  <%= date %>
  <% events.each do |event| %>
    <div>
      <p><%= event.name %></p>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_time %></td>
        <td><%= link_to 'Show', profile_event_path(event.user, event) %></td>
        <td><%= link_to 'Edit', edit_profile_event_path(event.user, event) %></td>
        <td><%= link_to 'Destroy', profile_event_path(event.user, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_profile_event_path(@user) %>
