<div class="calendar-day">
  <%= calendar number_of_days: 1, events: events do |date, events| %>
    <% events.each do |event| %>
      <div class="calendar-day-event">
        <%= link_to "", profile_event_path(event.user, event), class: "calendar-day-event-link" %>
        <p><i class="fas <%=event.event_type.description%>"></i><strong><%=" " +  event.name %></strong></p>
        <span>
          <%= event.start_time.strftime("%H:%M") %>
          <%= " | " %>
          <%= event.user == current_user ? "You" : event.user.first_name %>
        </span>
      </div>
    <% end %>
    <div class="events-list-see-more">
      <% if events.empty? %>
        <p>
          <strong>Ooh!</strong> ðŸ¤” you don't have any events.
        </p>
      <% end %>
    </div>
  <% end %>
</div>
