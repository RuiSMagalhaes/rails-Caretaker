<div class="form-container full-height">
  <div class="form-card">
    <h1>New Patient</h1>
    <%= simple_form_for(@relation, url: profile_create_patient_path(@profile), method: 'post') do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Add Patient", class: "btn-blue" %>
      </div>
      <%= link_to 'Back to Profile', profile_path(@profile) %>
    <% end %>
  </div>
</div>
